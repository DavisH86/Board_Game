<h1 class="Title">Boardgames Index</h1>
<div class="center">
  <%= link_to '<button type="button">New Board Game</button>'.html_safe, new_boardgame_path %>
  <%= link_to '<button type="button">Home Page</button>'.html_safe, events_path %>
</div>
<table class="boardgametable">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boardgames.each do |boardgame| %>
    <tr>
      <td>
        <%= link_to boardgame.title, boardgame_path(boardgame) %><br>
      </td>
      <td>
        <%= "Rated on: #{boardgame.rating}" %>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>
