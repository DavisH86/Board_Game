<h1 class="Title">Search Results</h1>
<br >

<% if @boardgames.empty? %>
  <div class="searchResult">
    <p>No results found.</p>

<% else %>

  <div class="searchResult">
    <p><%= "#{@boardgames.count} result(s) found." %></p>
    <ul class="unstyled">
      <% @boardgames.each do |boardgame| %>
      <li>
        <%= link_to boardgame.title, boardgame %>
      </li>
      <% end %>
    </ul>
  </div>
<% end %>
