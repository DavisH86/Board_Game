
<div class="center">
  <h1><%= @user.name %></h1>
  <p><%= @user.email %></p>

  <%= link_to "edit account", edit_user_registration_path %>

  <% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <h1>
          <%= @user.name %>
        </h1>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render 'follow_form' if signed_in? %>
    </div>
  </div>
</div>
