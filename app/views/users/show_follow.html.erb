<% provide(:title, @title) %>
<div class="row description">
  <aside>
    <section class="user_info">
      <h1><%= @user.name %><h1>
        <%= link_to "view my profile", user_path %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div >
          <%= will_paginate @users %>
          <% @users.each do |user| %>
          <li>
            <%= link_to "#{user.name}", user_path(user)%>
            <%= link_to (image_tag "#{current_user.profile_photo}", size: "40x40"), user_path(user) %>
          </li>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @user %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
