<h1>New Event Form</h1>

<%= form_for(@event) do |f| %>

  <% @event.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>

  <div class="field column 3" >
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
  </div><br>

  <div class="field column 3">
    <%= f.label :location, "Location:" %>
    <%= f.text_field :location %>
  </div><br>

  <div class="field column 3">
    <%= f.label :description, "Description:"%>
    <%= f.text_field :description %>
  </div><br>

  <div class="control-group column 3 ">
    <%= f.label :boardgame, "Boardgames:"%>
    <%= f.collection_check_boxes(:boardgame_ids, Boardgame.all, :id, :title, {multiple: true })  %>
    <!-- <%= f.collection_select(:boardgame_ids, Boardgame.all, :id, :title, {}, {multiple: true}) %> -->
    <!-- f.collection_select('boardgame_ids', Boardgame.all, :id, :title, prompt: true)   -->
  </div><br>


  <div class="field">
    <%= f.submit "Add Event"%>
  </div><br>
<% end %>

<%= link_to "Back", events_path %>
