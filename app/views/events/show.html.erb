<h2><%= "Event: #{@event.name}" %></h2>
<%= "Description: #{@event.description}" %><br>
<%= "Location: #{@event.location}" %><br>
<% @boardgames.each do |b| %>
  <%= "Board Game: #{b.title}" %>
<% end %><br>

<h3><%= "Supervising:" %></h3>
<ul>
  <li><%= "#{@event.supervisor.first_name} #{@event.supervisor.last_name}" %></li>
</ul>

<h3><%= "Members Attending" %></h3>
<% disable = false %>
<% @event.users.each do |user| %>
  <ul>
    <li><%= "User: #{user.first_name} #{user.last_name}" %></li>
  </ul>
  <% if user.id == current_user.id %>
    <% disable = true %>
  <% end %>
<% end %>

<% button_text = 'Sign up' %>
<% if disable == true %>
  <% button_text = "See you at the event" %>
<% end %>

<%= button_to button_text, { action: "join", id: @event.id }, {method: :patch, disabled: disable } %>
<hr>
<% if current_user == @event.supervisor %>
<li><%= link_to "Edit", edit_event_path(@event) %></li>
<% end %>
<%= link_to "Back", events_path %>
