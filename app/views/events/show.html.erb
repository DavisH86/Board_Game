<h2 class="showTitle"><%= "Event: #{@event.name}" %></h2>
<div class="description">
  <%= "Description: #{@event.description}" %><br>
  <%= "Location: #{@event.location}" %><br>
</div>
<div class="newLabel">
<h3>Boardgames:</h3>
<% @boardgames.each do |b| %>
  <ul>
    <li><%= link_to b.title, boardgame_path(b.id) %></li>
  </ul>
<% end %>

<h3>When:</h3>
<% if @event.eventdate != nil %>
  <%= "Date: #{@event.eventdate.strftime("%m/%d/%Y at %I:%M%p")}"%>
<% end %>

<h3><%= "Organized by:" %></h3>
<ul>
  <li><%= "#{@event.organizer.first_name} #{@event.organizer.last_name}" %></li>
</ul>

<h3><%= "Members Attending" %></h3>
<% disable = false %>
<% @event.users.each do |user| %>
  <ul>
    <li><%= "User: #{user.first_name} #{user.last_name}" %></li>
  </ul>
  <% if user == current_user %>
    <% disable = true %>
  <% end %>
<% end %>
<div>
<% button_text = 'Sign up' %>
<% if disable == true %>
  <% button_text = "See you at the event" %>
<% end %>

<%= button_to button_text, { action: "join", id: @event.id }, {method: :patch, disabled: disable } %>
<hr>
<% if current_user == @event.organizer %>
<li><%= link_to "Edit", edit_event_path(@event) %></li>
<% end %>
<%= link_to "Back", events_path %>
